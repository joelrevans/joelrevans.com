    {
        new CarouselImage(){ src="/images/Menopause Map/image1.jpg", width = 100 },
        new CarouselImage(){ src="/images/Menopause Map/image2.jpg", width = 100 },
        new CarouselImage(){ src="/images/Menopause Map/image3.jpg", width = 100 },
        new CarouselImage(){ src="/images/Menopause Map/image4.jpg", width = 100 },
